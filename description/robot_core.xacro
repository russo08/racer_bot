<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

<!-- BASE LINK-->
    <link name="base_link">
    
    </link>

<!-- CAHSSIS LINK-->
    <joint name="body_joint" type = "fixed">
        <parent link ="base_link" />
        <child link="body"/>
        <origin xyz="0.15 0 0"/>
    </joint>

    <link name="body">
        <visual>
            <geometry>
                <box size="0.408 0.075 0.057"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.408 0.075 0.057"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.113" x="0.408" y="0.075" z="0.057">
            <origiin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

<!-- FRONT BUMPER-->

    <joint name="bumper_joint" type = "fixed">
        <parent link ="body" />
        <child link="front_bumper"/>
        <origin xyz="0.209 0 0"/>
    </joint>

    <link name="front_bumper">
        <visual>
            <geometry>
                <box size="0.01 0.265 0.057"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.01 0.265 0.057"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.003" x="0.01" y="0.256" z="0.057">
            <origiin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

<!--REAR LEFT WHEEL AXEL -->
    <joint name="rear_left_axel_joint" type="fixed">
        <parent link="body"/>
        <child link="rear_left_axel_link"/>
        <origin xyz="-0.156 0.058 0" rpy="${pi/2} 0 0 "/>
    </joint>

    <link name="rear_left_axel_link">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.043"/>
            </geometry>
            <material name="orange"/>
        </visual>
         <collision>
            <geometry>
                <cylinder radius="0.024" length="0.043"/>
            </geometry>
        </collision> 
        <xacro:inertial_cylinder mass="0.005" radius="0.024" length="0.05">
            <origiin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

<!-- REAR RIGHT WHEEL AXEL -->

    <joint name="rear_right_axel_joint" type="fixed">
        <parent link="body"/>
        <child link="rear_right_axel_link"/>
        <origin xyz="-0.15 -0.058 0" rpy="${pi/2} 0 0 "/>
    </joint>

    <link name="rear_right_axel_link">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.043"/>
            </geometry>
            <material name="orange"/>
        </visual>
         <collision>
            <geometry>
                <cylinder radius="0.024" length="0.043"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.005" radius="0.024" length="0.05">
            <origiin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
<!-- FRONT LEFT WHEEL AXEL -->

    <joint name="front_left_axel_joint" type="fixed">
        <parent link="body"/>
        <child link="front_left_axel_link"/>
        <origin xyz="0.145 0.058 0" rpy="-${pi/2} 0 0"/>
    </joint>

    <link name="front_left_axel_link">
        <visual>
            <geometry>
                <cylinder radius="0.024" length="0.043"/>
            </geometry>
            <material name="orange"/>
        </visual>
         <collision>
            <geometry>
